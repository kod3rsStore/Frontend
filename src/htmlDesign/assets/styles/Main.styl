.Main
    width 100%
    justify-content center
    margin 150px 0 0 0
    &__Promotions
        width $width-gallery
        height $height-gallery
        position relative
        top:0px;
        margin:auto;
        img 
            width $width-gallery
            height $height-gallery
            object-fit contain
            position absolute
            top 0
            -webkit-animation-name fade
            -webkit-animation-iteration-count infinite
            -webkit-animation-duration 6s
            animation-name fade
            animation-iteration-count infinite
            animation-duration 6s

    &__Categories
        width 100%
        display grid
        grid-template-columns 100%
        justify-content center
        align-items center
        padding 10px 0 0 0

    &__Category
        width 100%
        display flex
        flex-direction column
        justify-content center
        align-items center
        padding 30px 0 0 0
        img 
            width $width-gallery
            height $height-gallery
@-webkit-keyframes fade 
    0% {opacity: 0;}
    20% {opacity: 1;}
    33% {opacity: 1;}
    53% {opacity: 0;}
    100% {opacity: 0;}
@keyframes fade 
    0% {opacity: 0;}
    20% {opacity: 1;}
    33% {opacity: 1;}
    53% {opacity: 0;}
    100% {opacity: 0;}
#f2 
    -webkit-animation-delay: -4s;
#f3 
    -webkit-animation-delay: -2s;

@media only screen and (min-width 600px) and (max-width 1200px) 
    .Main
        margin 190px 0 0 0
        &__Promotions
            width $width-gallery-medium
            height $height-gallery-medium
            img 
                width $width-gallery-medium
                height $height-gallery-medium
        &__Categories
            width 100%
            display grid
            grid-template-columns  repeat(2, minmax($width-gallery, $width-gallery-medium))
            grid-template-rows  repeat(2, minmax($height-gallery, $height-gallery-medium))
            grid-gap 10px
            justify-content center
            align-items center
        &__Category--title
            padding 10px 0 10px 0
        &__Category--img 
            img 
                width: 100%;
                object-fit: cover;   


@media only screen and (min-width 1200px) 
    .Main
        margin 160px 0 0 0
        &__Promotions
            width $width-gallery-big
            height $height-gallery-big
            img 
                width $width-gallery-big
                height $height-gallery-big        
        &__Categories
            width 100%
            display grid
            grid-template-columns 33% 33% 34%
            grid-gap 10px
            justify-content center
            align-items center 
        &__Category--title
            padding 10px 0 10px 0
        &__Category--img 
            img 
                width: 100%;
                object-fit: cover;      

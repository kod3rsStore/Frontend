@import '../Variables.styl'

.Profile
    margin 150px 0 0 0
    img 
        width 100%
    &__card
        box-shadow 0 4px 8px 0 rgba(0, 0, 0, 0.2)
        max-width 80%
        margin auto
        text-align center  
    &__card--title
        color grey
        font-size 18px

@media only screen and (min-width 600px)     
    .Profile
        &__card
            max-width 480px
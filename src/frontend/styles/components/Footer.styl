@import '../Variables.styl'

.Footer
    display flex
    flex-direction column
    font-size $font-size
    &__navContainer
        display flex
        flex-direction column
        text-decoration none
        padding 20px 20px 0 0
        a
            padding 5px
    &__socialContainer
        width 60%
        display flex
        flex-direction row
        justify-content space-around
        padding 10px 0 0 0
        align-items center
        font-size $font-size
    &__socialContainer img
        width 15px
@media only screen and (min-width 1200px) 
    .Footer
        margin 0 auto 0 auto   
        width 1200px   
        justify-content center        
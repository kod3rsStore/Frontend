@import '../Variables.styl'

.Main
    &__Categories
        width 100%
        display grid
        grid-template-columns 100%
        justify-content center
        align-items center
        padding 10px 0 0 0

    &__Category
        width 100%
        display flex
        flex-direction column
        justify-content center
        align-items center
        padding 30px 0 0 0
        img 
            width $width-gallery
            height $height-gallery    
@media only screen and (min-width 600px) and (max-width 1200px) 
    .Main
        &__Categories
            width 100%
            display grid
            grid-template-columns  repeat(2, minmax($width-gallery, $width-gallery-medium))
            grid-template-rows  repeat(2, minmax($height-gallery, $height-gallery-medium))
            grid-gap 10px
            justify-content center
            align-items center
        &__Category--title
            padding 10px 0 10px 0
        &__Category--img 
            img 
                width: 100%;
                object-fit: cover;            
@media only screen and (min-width 1200px) 
    .Main      
        &__Categories
            width 100%
            display grid
            grid-template-columns 33% 33% 34%
            grid-gap 10px
            justify-content center
            align-items center 
        &__Category--title
            padding 10px 0 10px 0
        &__Category--img 
            img 
                width: 100%;
                object-fit: cover;       
@import '../Variables.styl'

.login 
    margin 150px 0 0 0
    grid-template-columns 100%
    grid-gap 1.5rem
    grid-row-ga 1.5em
    display grid
    align-items center
    justify-content center
    &__container
        text-align center
    &__container_social-media--Google-button
        background-color  $background-search  
        font-size 12px  
        color $text-color  
        padding 10px 
    input
        margin 10px 0px 
        background-color $background-color 
        border-left 0px 
        border-top 0px 
        border-right 0px 
        border 1px solid $blue3 
        border-radius 10px 
        font-size 16px 
        font-family $font-family 
        padding 0px 20px 
        outline none 
        height 45px 
        width 90% 
    button 
        background-color $button-color-secondary 
        color $text-color
        border-radius 10px 
        border none 
        cursor pointer 
        font-size 16px 
        font-weight bold 
        font-family 'Muli', sans-serif 
        height 50px 
        letter-spacing 1px 
        margin 10px 0px 
        width 100%
    &__container--remember-me
        color $blue3
        display flex
        justify-content space-between
        margin-top 10px
        input
            margin -15px
            padding 0px
            transform scale(.4)
        a
            color $blue3
            font-size 14px
            text-decoration none
        ahover
            text-decoration underline
        label 
            width 90%
            display grid
            grid-template-columns repeat(2, minmax(15%, 20%))
            align-items center
            justify-content center

@media only screen and (min-width 400px)  and (max-width 599px) 
    .login 
        grid-template-columns 400px
        grid-gap 1.5rem
        grid-row-ga 1.5em
        display grid
        align-items center
        justify-content center
@media only screen and (min-width 600px)  
    .login 
        grid-template-columns 600px
        grid-gap 1.5rem
        grid-row-ga 1.5em
        display grid
        align-items center
        justify-content center        